<table class="form">


  <tr>
    <th>
      <%= form.label :name %>
    </th>

    <td>
      <%= form.text_field :name %>
    </td>
  </tr>

  <tr>
    <th>
      <%= form.label :image %>
    </th>

    <td>
      <%= form.file_field :image %>
    </td>
  </tr>




    <tr>
      <th colspan="2">
        <label>Products</label>
      </th>
    </tr>

    <tr>
      <td colspan="2">
        <div class="products_by_department">
        <% @all_products.group_by(&:department).each do |department, products| %>
          <div class="department_products">
            <span class="department_name">
              <%- if department.nil? %>
                Other
              <%- else %>
                <%= department.name %>
              <%- end %>
            </span>
            <br>
            <% products.each do |product| %>
              <%= check_box_tag 'page[product_ids][]', product.id, @page.products.include?(product), :class=>"",:id=>"product_#{product.id}" %>
              <%= label_tag "product_#{product.id}", product.name %>
              <br>
            <% end %>
          </div>
        <% end %>
        </div>
      </td>
    </tr>

</table>
