<h1 class="greyText bold ">Join Us!</h1>
<br />
<% form_for(@user) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name, nil, :class => 'greyText' %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :email, nil, :class => 'greyText' %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.submit 'Submit', :class => 'greyText' %>
  </p>
<% end %>
