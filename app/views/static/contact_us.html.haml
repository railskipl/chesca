#contact-us-wrapper
  %h2 Contact us
  .frame
    - form_for :mailer, :url => { :controller => 'static', :action => 'contact_us' }, :html => { :method => :post } do |f|
      .row
        = f.text_field :name
        = f.label :name, 'Your name:'
      .row
        = f.text_field :email
        = f.label :email, 'Your e-mail address:'
      .row
        = f.text_area :message
      .row
        = f.submit 'Send', :class => 'send'

  %h2 Returns
  .frame
    - form_for :mailer, :url => { :controller => 'static', :action => 'returns' }, :html => { :method => :post } do |f|
      .row
        = f.text_field :name
        = f.label :name, 'Your name:'
      .row
        = f.text_field :email
        = f.label :email, 'Your e-mail address:'
      .row
        = f.text_field :order_number
        = f.label :order_number, 'Order #:'
      .row
        = f.text_area :comments
      .row
        = f.submit 'Send', :class => 'send'

