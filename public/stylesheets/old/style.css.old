body {
  background: url('/images/bg.png');
  margin: 0;
  padding: 0;
}

img {
  border: none;
}

#shadow {
  position: absolute;
  height: 800px;
  width: 100%;
  top: 0;
  left: 0;
  right: 0;
  background: url('/images/shadow.png');
  z-index: 0;
}

#wrapper {
  position: relative;
  width: 760px;
  margin: 10px auto;
  z-index: 1;
}
  
  #admin {
    position: absolute;
    top: 50px;
    right: 0;
    padding: 6px 10px;
    border: 4px solid #3B4046;
    background: #33383D;
    color: #A8B8C7;
    font-family: arial, sans-serif;
    font-size: 11px;
  }

    #admin a {
      color: #E0EAFF;
      text-decoration: underline;
      margin: 0 7px;
    }

      #admin a:hover {
        color: white;
      }

  #header {
    background: url('/images/logo.png') left top no-repeat;
    height: 131px;
  }

  #body {
    position: relative;
  }

    #nav {
      position: absolute;
      top: 50px;
    }

      #nav a {
        display: block;
        width: 160px;
        height: 31px;
        padding-left: 24px;
        line-height: 31px;
        margin-bottom: 10px;
        background: url('/images/nav-item.png') left bottom;
        color: white;
        font-family: arial, sans-serif;
        font-size: 16px;
        text-decoration: none;
      }

        #nav a:hover {
          background-position: left top;
        }

    #cart {
      position: absolute;
      right: -134px;
      top: 150px;
      width: 134px;
      height: 100px;
    }
      
      #checkout {
        display: block;
        height: 41px;
        background: url('/images/checkout.png');
        text-decoration: none;
      }

        #cart_items_count {
          margin-top: 10px;
          padding-left: 10px;
          font-family: tahoma, verdana, sans-serif;
          font-size: 9px;
          color: white;
        }

    #content_shadow {
      position: absolute;
      top: -15px;
      right: -15px;
      width: 137px;
      height: 137px;
      background: url('/images/content-shadow.png');
    }

    #content {
      position: absolute;
      right: 0;
      width: 600px;
    }
      
      #content .flash_message {
        padding: 4px 15px;
        background: #C9C9C9;
        border-top: 1px solid #ABABAB;
        color: #333333;
        font-family: arial, sans-serif;
        font-size: 12px;
      }

      #content_top,
      #content_bottom {
        height: 32px;
        background: url('/images/content-borders.png');
      }
        
        #content_bottom {
          background-position: left bottom;
        }

      #content_body {
        background: white;
        overflow: hidden;
        min-height: 200px;
        padding: 0 15px;
        font-family: arial, sans-serif;
        font-size: 13px;
        color: black;
      }
        
        #content_body h1 {
          padding: 0 15px;
          margin: 0 -15px;
          font-weight: normal;
          font-family: georgia, serif;
          font-size: 30px;
          color: #FF3C7D;
          border-bottom: 2px solid #DDDDDD;
        }
      
      #footer {
        padding: 20px;
        text-align: center;
        text-transform: uppercase;
        font-family: tahoma, sans-serif;
        font-size: 10px;
        color: white;
      }
        
        #footer a {
          color: #FF3B7A;
          text-decoration: none;
        }

